<BorderPane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.prototypage.calendrierduceri.controller.LoginController"
            styleClass="main-panel"
            prefHeight="400.0" prefWidth="600.0">

    <center>
        <VBox spacing="10" alignment="center">
            <CustomTextField fx:id="usernameField" promptText="Username"  />
            <CustomPasswordField fx:id="passwordField" promptText="Password" />
            <Button text="Connexion" onAction="#getConnection" />
        </VBox>
    </center>

    <stylesheets>
         <URL value="@Bootstrap.css"/>
        <!-- Ajoutez vos propres feuilles de style pour personnaliser davantage l'apparence -->
    </stylesheets>

